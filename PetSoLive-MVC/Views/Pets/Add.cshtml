@model PetSoLive_MVC.ViewModels.AddPetViewModel

@{
ViewData["Title"] = "Add Pet";
}
<h1>Add a Pet</h1>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Pet.Name" />
    </div>
    <div class="mb-3">
        <label for="Species" class="form-label">Species</label>
        <select class="form-select" id="Species" name="Pet.SpeciesId">
            @foreach (var species in Model.Species)
            {
            <option value="@species.Value">@species.Text</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="Breed" class="form-label">Breed</label>
        <select class="form-select" id="Breed" name="Pet.BreedId">
            @Html.DropDownList("BreedList", ViewBag.BreedList as SelectList, "Select Breed", new { @class = "form-select" })
        </select>
    </div>
    <button type="submit" class="btn btn-success">Add Pet</button>
</form>
