@model PetSoLive_MVC.ViewModels.EditPetViewModel

@{
ViewData["Title"] = "Edit Pet";
}
<h1>Edit @Model.Pet.Name</h1>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Pet.Name" value="@Model.Pet.Name" />
    </div>
    <div class="mb-3">
        <label for="Species" class="form-label">Species</label>
        <select class="form-select" id="Species" name="Pet.SpeciesId">
            <option value="@Model.Pet.Species.Id">@Model.Pet.Species.DisplayName</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="Breed" class="form-label">Breed</label>
        <select class="form-select" id="Breed" name="Pet.BreedId">
            @foreach (var breed in Model.BreedSelectList)
            {
            <option value="@breed.Value">@breed.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>